{
  "name": "<%= _.slugify(projectName) %>",
 "description": "Assemble a website from templates and data.",
  "version": "0.1.0",
  "homepage": "http://assemble.io",
  "author": {
    "name": "<%= authorName %>",
    "url": "http://github.com/<%= authorLogin %>/"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/<%= authorLogin %>/<%= _.slugify(projectName) %>.git"
  },
  "bugs": {
    "url": "https://github.com/<%= authorLogin %>/<%= _.slugify(projectName) %>/issues"
  },
  "engines": {
    "node": ">=0.8"
  },
  "scripts": {
    "test": "grunt assemble"
  },
  "devDependencies": {
    "assemble": "~0.4.33",
    "grunt": "~0.4.2",
    "grunt-contrib-clean": "~0.5.0",
    "grunt-contrib-connect": "~0.6.0",
    "grunt-contrib-watch": "~0.5.3",
    "load-grunt-tasks": "~0.2.1",
    "time-grunt": "~0.2.7"<% if(plugin && plugin.length > 0){ %>,
    <% if(typeof plugin === 'object'){ _.each(plugin, function(name, i) { %>
    "<%= name %>": "*"<% if(i < (plugin.length - 1)) { %>,<% } %>
    <% }); } else { %>
    "<%= plugin %>": "*"
    <%} } %>
  },
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/<%= authorLogin %>/<%= _.slugify(projectName) %>/blob/master/LICENSE-MIT"
    }
  ],
  "keywords": [
    "assemble",
    "templates",
    "handlebars",
    "site generator",
    "site builder",
    "grunt"
  ]
}
